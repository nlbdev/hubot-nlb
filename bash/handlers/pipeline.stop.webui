#!/bin/bash
set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR

LOG="`tempfile`"
function finish {
    LOG2="`tempfile`"
    head -n 1 $LOG >> $LOG2
    echo >> $LOG2
    tail -n +2 $LOG >> $LOG2
    cat $LOG2
    rm $LOG $LOG2
}
trap finish EXIT

. ~/config/set-env.sh

sudo service daisy-pipeline2-webui stop >> $LOG 2>&1
if [ "$?" = "" ];
    echo "Web UI stopped successfully" >> $LOG 2>&1
else
    echo "An error occured while stopping the Web UI" >> $LOG 2>&1
fi

exit 0
