#!/bin/bash
set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR

LOG="`tempfile`"

. ~/config/set-env.sh

REPO_URL="http://$PIPELINE_HOST:$PIPELINE_REPO_PORT"

cd /opt/daisy-pipeline2
cli/linux/dp2 halt >> $LOG 2>&1

echo "Done with stopping Pipeline 2" >> $LOG 2>&1

LOG2="`tempfile`"
head -n 1 $LOG >> $LOG2
echo >> $LOG2
tail -n +2 $LOG >> $LOG2
cat $LOG2
rm $LOG $LOG2

exit 0
